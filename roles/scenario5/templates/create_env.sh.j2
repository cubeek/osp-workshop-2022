#!/bin/bash

set -e

source {{ overcloudrc_file }}

if ! openstack image show cirros-0.5.2-x86_64 > /dev/null 2> /dev/null; then
    # Create Cirros image
    curl -L http://download.cirros-cloud.net/0.5.2/cirros-0.5.2-x86_64-disk.img > cirros-0.5.2-x86_64-disk.img
    openstack image create cirros-0.5.2-x86_64 --file cirros-0.5.2-x86_64-disk.img --disk-format qcow2 --container-format bare --public
fi

openstack network create scenario-5-network | awk '/^\| id/{ print $4 }'

openstack subnet create --network scenario-5-network scenario-5-subnet --subnet-range 192.168.200.0/24

openstack router create scenario-5-router

openstack router set --enable-snat --external-gateway {{ public_network }} scenario-5-router
openstack router add subnet scenario-5-router scenario-5-subnet

openstack flavor show m1.tiny > /dev/null 2> /dev/null || openstack flavor create m1.tiny --disk 1 --vcpus 1 --ram 64
openstack flavor show m1.medium > /dev/null 2> /dev/null || openstack flavor create m1.medium --disk 10 --vcpus 1 --ram 512

openstack security group create scenario-5-sg
openstack security group rule create --ingress --protocol icmp scenario-5-sg
openstack security group rule create --ingress --protocol tcp --dst-port 22 scenario-5-sg

openstack keypair create scenario-5-key > {{ ssh_key_file }}
chmod 0600 {{ ssh_key_file }}

openstack server create --flavor m1.medium --image cirros-0.5.2-x86_64 --nic net-id=scenario-5-network --key-name scenario-5-key --security-group scenario-5-sg scenario-5-vm --availability-zone nova:compute-0.redhat.local

port_id=$(openstack port list --server scenario-5-vm -c ID -f value | head)
fip=$(openstack floating ip create --port $port_id {{ public_network }} | awk '/floating_ip_address/{ print $4 }')

echo "$fip"
